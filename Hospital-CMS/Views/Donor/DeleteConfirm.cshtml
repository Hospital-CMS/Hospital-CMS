
@model Hospital_CMS.Models.DonorDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<h2>Are you sure you want to delete this Donor?</h2>
<a href="/Donor/List">Cancel</a>
<h2>@Model.FirstName @Model.LastName</h2>
<div>Contact: @Model.Contact</div>
<div>Address: @Model.Address</div>
<div>Value: @Model.Value</div>
<form action="/Donor/Delete/@Model.DonorID" method="POST">
    <input type="submit" value="Confirm Delete" />

</form>